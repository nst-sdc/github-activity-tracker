---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import StatCard from "../components/StatCard.astro";
import ContributionChart from "../components/ContributionChart.astro";
---

<Layout title="Hacktoberfest 2025 Dashboard">
  <Fragment slot="navbar">
    <Navbar />
  </Fragment>
  <main class="min-h-screen bg-gradient-to-br from-black via-gray-900 to-green-900 font-mono">

    <section class="relative text-white py-24 overflow-hidden">
      
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
        <div class="inline-block mb-6">
          <span class="bg-gradient-to-r from-green-500 to-lime-400 text-black px-4 py-2  text-sm font-semibold uppercase tracking-wide ">
            October 2025
          </span>
        </div>
        
        <h1 class="text-6xl md:text-7xl font-black mb-6 bg-gradient-to-r from-green-400 to-lime-300 bg-clip-text text-transparent">
          Github Activity Tracker 2025
        </h1>
        
        <h2 class="text-2xl md:text-3xl font-bold mb-8 text-green-300">
          Celebrate Open Source
        </h2>
        
        <p class="text-xl mb-10 max-w-3xl mx-auto leading-relaxed opacity-90 text-gray-300">
          Join developers in NSTSDC and contributing to open source projects. Register your project, track contributions, and climb the leaderboard!
        </p>
        
        <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
          <a href="/register" class="group bg-gradient-to-r from-green-500 to-lime-400 text-black px-10 py-4 rounded-xl font-bold text-lg hover:from-green-600 hover:to-lime-500 transform hover:scale-105 transition-all duration-300 shadow-xl hover:shadow-green-500/25">
            <span class="flex items-center gap-2">
              Register Project
              <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
              </svg>
            </span>
          </a>
        </div>
      </div>
    </section>

    <!-- Progress Indicator -->
    <section class="py-8 border-b border-gray-800/50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-center space-x-8">
          <div class="text-center">
            <div class="text-3xl font-black text-green-400">31</div>
            <div class="text-sm text-gray-400 font-medium">Days Left</div>
          </div>
          <div class="w-px h-12 bg-gray-700"></div>
          <div class="text-center">
            <div class="text-3xl font-black text-lime-400">6</div>
            <div class="text-sm text-gray-400 font-medium">PRs Needed</div>
          </div>
          <div class="w-px h-12 bg-gray-700"></div>
        </div>
      </div>
    </section>

    <!-- Enhanced Stats Section -->
    <section class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-black text-white mb-4">Live Statistics</h2>
          <p class="text-xl text-gray-400 max-w-2xl mx-auto">
            Track the global impact of open source contributions in real-time
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <StatCard 
            title="Total Projects" 
            value="0" 
            subtitle="Active repositories" 
          />
          <StatCard 
            title="Contributors" 
            value="0" 
            subtitle="Active participants" 
          />
          <StatCard 
            title="Pull Requests" 
            value="0" 
            subtitle="Contributions made" 
          />
          <StatCard 
            title="Issues Resolved" 
            value="0" 
            subtitle="Problems solved" 
          />
        </div>
      </div>
    </section>

    <!-- Enhanced Activity Section -->
    <section class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Contribution Chart -->
          <div class="bg-gradient-to-br from-gray-900/80 to-gray-800/80 border border-gray-700 rounded-2xl p-8 shadow-lg backdrop-blur-sm">
            <h3 class="text-2xl font-bold text-white mb-6 flex items-center gap-3">
              <div class="w-8 h-8 bg-gradient-to-r from-green-500 to-lime-400 rounded-lg flex items-center justify-center">
                <svg class="w-4 h-4 text-black" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 10a8 8 0 018-8v8h8a8 8 0 11-16 0z"></path>
                </svg>
              </div>
              Contribution Activity
            </h3>
            <ContributionChart />
          </div>
          
          <!-- Recent Activity -->
          <div class="bg-gradient-to-br from-gray-900/80 to-gray-800/80 border border-gray-700 rounded-2xl p-8 shadow-lg backdrop-blur-sm">
            <h3 class="text-2xl font-bold text-white mb-6 flex items-center gap-3">
              <div class="w-8 h-8 bg-gradient-to-r from-emerald-500 to-green-400 rounded-lg flex items-center justify-center">
                <svg class="w-4 h-4 text-black" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                </svg>
              </div>
              Recent Activity
            </h3>
            
            <div class="text-center py-12">
              <div class="w-24 h-24 bg-gradient-to-r from-gray-800/50 to-gray-700/50 border border-gray-600 rounded-full flex items-center justify-center mx-auto mb-6 backdrop-blur-sm">
                <svg class="w-12 h-12 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h4 class="text-xl font-bold text-white mb-3">No Activity Yet</h4>
              <p class="text-gray-400 leading-relaxed">
                Activity will appear here once projects are registered and contributions start flowing. 
                Be the first to make an impact!
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Enhanced Call to Action -->
    <section class="relative text-white py-24 overflow-hidden">
      <!-- Background elements -->
      <div class="absolute inset-0 opacity-20">
        <div class="absolute top-0 left-0 w-full h-full bg-[url('data:image/svg+xml,%3Csvg%20width%3D%2260%22%20height%3D%2260%22%20viewBox%3D%220%200%2060%2060%22%20xmlns%3D%22http%3A//www.w3.org/2000/svg%22%3E%3Cg%20fill%3D%22none%22%20fill-rule%3D%22evenodd%22%3E%3Cg%20fill%3D%22%2310b981%22%20fill-opacity%3D%220.1%22%3E%3Ccircle%20cx%3D%2230%22%20cy%3D%2230%22%20r%3D%222%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')]"></div>
      </div>
      
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-5xl font-black mb-8 leading-tight text-white">
            Ready to Start Your<br/>
            <span class="bg-gradient-to-r from-green-400 to-lime-300 bg-clip-text text-transparent">
              Open Source Journey?
            </span>
          </h2>
          
          <p class="text-xl mb-12 max-w-2xl mx-auto leading-relaxed opacity-90 text-gray-300">
            Whether you're a beginner taking your first steps or an experienced developer, 
            there's a perfect project waiting for your contribution.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
            <a href="/leaderboard" class="group border-2 border-green-400 text-green-400 px-12 py-5 rounded-xl font-bold text-xl hover:bg-green-400 hover:text-black transition-all duration-300 backdrop-blur-sm">
              <span class="flex items-center gap-3">
              View Leaderboard
              </span>
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Fragment slot="footer">
    <Footer />
  </Fragment>
</Layout>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
  }
  
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
</style>
