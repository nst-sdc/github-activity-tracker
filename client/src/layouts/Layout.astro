---
const { title = "Hacktoberfest Tracker 2025" } = Astro.props;
import "../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <meta name="description" content="Track your Hacktoberfest 2025 contributions and discover open source projects." />
  </head>
  <body class="bg-gray-50 min-h-screen">
    <!-- Navbar -->
    <slot name="navbar" />

    <!-- Main Content -->
    <main class="min-h-screen">
      <slot />
    </main>

    <!-- Footer -->
    <slot name="footer" />
  </body>
</html>

<style>
  html {
    font-family: system-ui, sans-serif;
  }
</style>