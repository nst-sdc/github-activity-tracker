---
import StatCard from "../components/StatCard.astro";
---

<section class="min-h-screen bg-gray-100 p-6">
  <div class="max-w-7xl mx-auto">
    <h1 class="text-3xl font-bold mb-6 text-gray-800">Dashboard</h1>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <StatCard title="Total Commits" value="1,234" subtitle="in the last month" icon="commit" />
      <StatCard title="Total PRs" value="567" subtitle="in the last month" icon="pr" />
      <StatCard title="Total Issues" value="89" subtitle="in the last month" icon="issue" />
    </div>
  </div>
</section>