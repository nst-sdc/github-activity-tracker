---
const { title, value, subtitle, icon } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-orange-500">
  <div class="flex items-center justify-between">
    <div>
      <h3 class="text-sm font-medium text-gray-500 uppercase tracking-wide">{title}</h3>
      <p class="text-3xl font-bold text-gray-900 mt-2">{value}</p>
      {subtitle && <p class="text-sm text-gray-600 mt-1">{subtitle}</p>}
    </div>
    {icon && (
      <div class="text-orange-500 text-4xl">
        {icon}
      </div>
    )}
  </div>
</div>